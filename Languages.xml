<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<language id="com.onecrayon.sugar.taskpaper">
		<root-zone>language-root.taskpaper</root-zone>

		<name>TaskPaper</name>

		<detectors>
			<extension>taskpaper</extension>
			
			<combo>
				<extension>txt</extension>
				<match-content lines="1">^([^\s-].*?(:))((?:\s+@\S+(?:\(.*?\))?)*)\s*$</match-content>
			</combo>
		</detectors>
	</language>
</settings>